<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:background="#E9EEFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="Explore"
        android:textColor="#231F20"
        android:textSize="32sp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:iconifiedByDefault="true"
        android:layoutDirection="rtl"
        android:paddingEnd="32dp"
        android:searchIcon="@drawable/ic_search_fragment_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <View
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bottom_bar_rounded_rectangle"
        android:backgroundTint="#CCFCE9EE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ic_menu_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_menu_home"
        app:layout_constraintBottom_toBottomOf="@id/bottom_navigation_bar"
        app:layout_constraintEnd_toStartOf="@id/ic_menu_explore"
        app:layout_constraintStart_toStartOf="@id/bottom_navigation_bar"
        app:layout_constraintTop_toTopOf="@id/bottom_navigation_bar" />

    <ImageButton
        android:id="@+id/ic_menu_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_menu_explore_pressed"
        app:layout_constraintBottom_toBottomOf="@id/bottom_navigation_bar"
        app:layout_constraintEnd_toEndOf="@id/bottom_navigation_bar"
        app:layout_constraintStart_toStartOf="@id/bottom_navigation_bar"
        app:layout_constraintTop_toTopOf="@id/bottom_navigation_bar" />

    <ImageButton
        android:id="@+id/ic_menu_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_menu_bookmark"
        app:layout_constraintBottom_toBottomOf="@id/bottom_navigation_bar"
        app:layout_constraintEnd_toEndOf="@id/bottom_navigation_bar"
        app:layout_constraintStart_toEndOf="@id/ic_menu_explore"
        app:layout_constraintTop_toTopOf="@id/bottom_navigation_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>