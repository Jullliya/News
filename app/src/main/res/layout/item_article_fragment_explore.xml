<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:layout_marginBottom="24dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_article_card_title"
        android:layout_width="238dp"
        android:layout_height="48dp"
        android:paddingEnd="16dp"
        android:layout_marginEnd="128dp"
        android:layout_gravity="center"
        android:fontFamily="@font/inter_medium"
        android:text="@string/article_title_fragment_home"
        android:textColor="#231F20"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_item_article_card"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="NotSibling" />

    <ImageView
        android:id="@+id/iv_author_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/author_round"
        android:src="@drawable/author_ellips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_article_card_title" />

    <TextView
        android:id="@+id/tv_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_medium"
        android:text="Harry Harper Â· Apr 12, 2023"
        android:textColor="#6D6265"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iv_author_card"
        app:layout_constraintTop_toBottomOf="@id/tv_item_article_card_title" />

    <androidx.cardview.widget.CardView
        android:layout_width="112dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toEndOf="@id/tv_item_article_card_title"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_item_article_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@drawable/article_card_1" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>