<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_just_for_you"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="4dp">

    <View
        android:id="@+id/view_just_for_you"
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        android:background="@color/fragment_top_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/just_for_you"
        android:textColor="@color/fragment_title"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_just_for_you"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibtn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/fragment_top_iv"
        android:contentDescription="@string/content_description_null"
        android:src="@drawable/long_arrow_left"
        app:layout_constraintBottom_toBottomOf="@+id/view_just_for_you"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_just_for_you" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_articles_just_for_you"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:scrollbarSize="0dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_just_for_you"
        app:layout_constraintVertical_bias="0.021"
        tools:context=".presentation.ui.main_activity.MainActivity"
        tools:ignore="RtlSymmetry"
        tools:listitem="@layout/item_article_fragment_explore" />

</androidx.constraintlayout.widget.ConstraintLayout>