<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginEnd="13dp"
    android:layout_width="269dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="269dp"
        app:cardCornerRadius="8dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv_item_article_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:importantForAccessibility="no"
            android:src="@drawable/article_card_1"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_item_article_card_title"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/inter_medium"
        android:text="@string/article_title_fragment_home"
        android:textColor="#231F20"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_item_article_card_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:textSize="14sp"
        android:fontFamily="@font/inter"
        android:text="@string/item_article_card_section"
        android:textColor="#6D6265"/>
</LinearLayout>